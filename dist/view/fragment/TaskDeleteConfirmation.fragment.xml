<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog id="idDialogDeleteTaskConfirmation" type="Message" icon="sap-icon://alert" title="Warning">
        <content>
            <Text id="idTaskDeleteMsg" text="Are you sure to delete this task ?"/>
        </content>
        <beginButton>
            <Button id="idBtnDeleteTaskConfirm" press="proceedTaskDelete" type="Reject" text="Delete"/>
        </beginButton>
        <endButton>
            <Button id="idBtnDeleteTaskCancel" press="closeDialogDeleteTask" type="Emphasized" text="Cancel" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>